<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SeeYouIn.ViewModels"
             x:Class="SeeYouIn.Views.Reminders.MyRemindersPage">
    <ContentPage.BindingContext>
        <vm:MyRemindersViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <StackLayout IsVisible="{Binding ShouldShowNoRemindersMessage,Mode=TwoWay}">
                <Label Text="You have no reminders, YET!"/>
                <Label Text="Add a reminder now in the left drawer"/>
            </StackLayout>
            <ListView HasUnevenRows="True" ItemsSource="{Binding ReminderList}" IsVisible="{Binding HasReminders,Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame>
                                <StackLayout Padding="10">
                                    <Label Text="{Binding Title}"/>
                                </StackLayout>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>